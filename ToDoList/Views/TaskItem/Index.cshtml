@model List<TaskItem>

<h2>Task List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Task Id</th>
            <th>Task Name</th>
            <th>Status</th>
            <th>Created Date</th>
            <th>Completed Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.TaskId</td>
                <td>@task.TaskName</td>
                <td>@task.Status</td>
                <td>@task.TaskCreatedDate</td>
                @if (task.Status == TaskItem.TaskStatus.ToDo)
                {
                    <td></td>
                } else
                {
                    <td>@task.TaskCompletedDate</td>
                }
               @*  <td>@task.TaskCompletedDate</td> *@
                <td>
                    <a asp-action="Details" asp-route-id="@task.TaskId" class="btn btn-primary">Details</a>
                    <a asp-action="Edit" asp-route-id="@task.TaskId" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@task.TaskId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create" class="btn btn-success">Add New Task</a>
</p>
