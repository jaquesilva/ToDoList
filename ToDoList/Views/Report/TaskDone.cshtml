@model List<TaskItem>

<h2>Tasks Done</h2>

<table class="table">
    <thead>
        <tr>
            <th>Task Id</th>
            <th>Task Name</th>
            <th>Status</th>
            <th>Created Date</th>
            <th>Completed Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.TaskId</td>
                <td>@task.TaskName</td>
                <td>@task.Status</td>
                <td>@task.TaskCreatedDate</td>

                @* @if (task.Status == TaskItem.TaskStatus.ToDo)
                {
                    <td></td>
                }
                else
                {
                    <td>@task.TaskCompletedDate</td>
                    <td></td>
                } *@
            </tr>
        }
    </tbody>
</table>

